[run]
source = .
omit =
    test_*.py
    *_test.py
    run_tests.py
    tools/lib/reporters/csv_reporter.py
    .venv/*
    venv/*
    env/*
    __pycache__/*
    .pytest_cache/*
    htmlcov/*
    .git/*
    .tox/*
    build/*
    dist/*
    *.egg-info/*
    config.json
    config.template.json

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    if self\.debug
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    if TYPE_CHECKING:
show_missing = True
precision = 2

[html]
directory = htmlcov

[xml]
output = coverage.xml
